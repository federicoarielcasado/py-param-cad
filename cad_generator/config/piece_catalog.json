        {
          "rule_id": "VR-BP-04",
          "description": "Margen m\u00ednimo borde-agujero (AISC)",
          "expression": "margen_perforacion >= diametro_perforacion * 1.5",
          "severity": "error",
          "message": "El margen borde-agujero debe ser al menos 1.5 \u00d7 di\u00e1metro (criterio AISC Tabla J3.4)."
